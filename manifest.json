{
  "manifest_version": 2,

  "name": "Universal App",
  "description": "This extension can change currency, units and translate text.",
  "version": "0.2",

  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ]
}